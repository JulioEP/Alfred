<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnDeleteModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@mipmap/botigocontigo" />

        <TextView
            android:id="@+id/textView5"
            android:inputType="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/learn_options_terms_title"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/queryText"
            android:inputType="none"
            android:editable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="aprendiendo a emprender"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/queryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/learn_options_show_articles" />

        <Button
            android:id="@+id/favoritesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/learn_options_show_favorites" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>