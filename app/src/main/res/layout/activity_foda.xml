<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/fodaTextViewStrengths"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="#d6d4d4"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/typeOfVarViewStrengths"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="#d6d4d4"
                android:text="@string/interno"
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/fodaListViewStrengths"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#d6d4d4"
            android:padding="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/fodaTextViewOpportunities"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="#d6d4d4"
                android:textAlignment="center"
                android:textColorLink="@android:color/darker_gray"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/typeOfVarViewOpportunities"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="#d6d4d4"
                android:text="@string/externo"
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/fodaListViewOpportunities"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#d6d4d4"
            android:padding="10dp" />

        <Button
            android:id="@+id/fodaButton"
            android:layout_width="263dp"
            android:layout_height="45dp"
            android:background="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="70dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>