<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    android:padding="10dp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerTasks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ViewFlipper
        android:id="@+id/vf_task_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/flip_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnNewTask"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_plus"
                android:background="@drawable/oval"
                android:layout_marginEnd="10dp" />

            <Spinner
                android:id="@+id/spinner_planes"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/spinner_blue"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/flip_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_edit_task"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/btnOptTaskStyle"
                android:background="@color/bgEditTask"
                android:src="@drawable/ic_edit" />
            <ImageView
                android:id="@+id/btn_del_task"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/btnOptTaskStyle"
                android:background="@color/bgTrashTask"
                android:src="@drawable/ic_trash" />
            <ImageView
                android:id="@+id/btn_undo_task"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/btnOptTaskStyle"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_back"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/flip_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_del_all_task"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/btnOptTaskStyle"
                android:background="@color/bgTrashTask"
                android:src="@drawable/ic_trash" />
            <ImageView
                android:id="@+id/btn_undo_all_task"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/btnOptTaskStyle"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_back"/>
        </LinearLayout>

    </ViewFlipper>

</LinearLayout>

